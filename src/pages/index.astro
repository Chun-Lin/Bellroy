---
// Example: src/pages/index.astro
import '../styles/global.css';
import ProductCard from '/src/elm/ProductCard.elm';

const litePackingCaddy = {
  imageUrls: [
    { name: 'Graphite', url: 'https://bellroy-product-images.imgix.net/bellroy_dot_com_range_page_image/AUD/ELBB-BLK-234/0?auto=format&fit=max&w=640' },
    { name: 'Ash', url: 'https://bellroy-product-images.imgix.net/bellroy_dot_com_range_page_image/AUD/ELBB-ASH-234/0?auto=format&fit=max&w=640' },
    { name: 'Terracotta', url: 'https://bellroy-product-images.imgix.net/bellroy_dot_com_range_page_image/AUD/ELBB-CLY-234/0?auto=format&fit=max&w=640' },
  ],
  productName: 'Lite Packing Caddy 10L',
  price: '$49',
  colors: [
    { name: 'Graphite', hexCode: '#3B3B3B' },
    { name: 'Ash', hexCode: '#EAEAEA' },
    { name: 'Terracotta', hexCode: '#A9533A' },
  ],
  description: '10L / Shoes, change of outfit, bulky items',
  badge: { text: 'bundle & save', classnames: 'bg-orange-500' },
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Display</title>

  </head>
  <body
    class="font-sans flex flex-col justify-center items-center min-h-screen bg-gray-100 m-0"
  >
  	<h1 class="text-2xl font-bold mb-4">Product Display</h1>
    <ProductCard
      client:load
      imageUrls={litePackingCaddy.imageUrls}
      productName={litePackingCaddy.productName}
      price={litePackingCaddy.price}
      colors={litePackingCaddy.colors}
      description={litePackingCaddy.description}
      badge={litePackingCaddy.badge}
    />
  </body>
</html>
